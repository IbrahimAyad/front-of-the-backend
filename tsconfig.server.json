{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "src/server.ts",
    "src/routes/**/*",
    "src/plugins/**/*",
    "src/services/**/*",
    "src/schemas/**/*",
    "src/types/auth.ts",
    "src/types/global.d.ts",
    "src/config/server.ts",
    "src/utils/jwt.ts",
    "src/lib/agentRouter.ts",
    "src/lib/aiDecisionEngine.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components/**/*",
    "src/pages/**/*",
    "src/hooks/**/*",
    "src/contexts/**/*",
    "src/config/client.ts",
    "src/services/api.ts",
    "src/services/websocket.ts",
    "src/utils/queryClient.ts",
    "src/utils/mobileDetection.ts",
    "src/main.tsx",
    "src/App.tsx",
    "src/websocket.ts",
    "prisma/**/*"
  ]
}

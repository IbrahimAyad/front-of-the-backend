# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Configuration
JWT_SECRET="your-secret-key-here"
JWT_REFRESH_SECRET="your-refresh-secret-key-here"

# Server Configuration
PORT=8000
NODE_ENV=development

# MacOS Admin Integration
MACOS_ADMIN_URL="http://localhost:8080"
MACOS_ADMIN_API_KEY="your-macos-admin-api-key"
BACKEND_API_KEY="your-backend-api-key-for-webhooks"

# Product Sync Configuration
ENABLE_AUTO_SYNC=true
PRODUCT_SYNC_INTERVAL=5  # minutes

# SMS Configuration (optional)
SMS_ENABLED=false
SMS_PROVIDER="twilio"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email Configuration (optional)
EMAIL_ENABLED=false
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Analytics Configuration (optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Cloudflare Images Configuration
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"